@model Crudoperations.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h6>Employee Name</h6>
                <input type="text" name="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Employee Age</h6>
                <input  type="text" name="EmployeeAge" class="form-control" />
                <span asp-validation-for="EmployeeAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Employee Salary </h6>
                <input type="text" name="EmployeeSalary" class="form-control" />
                <span asp-validation-for="EmployeeSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
               <h6>Department Name</h6>
                @*<input  type="text" name="DepartmentId" class="form-control" />*@
                @*<select name="DepartmentId" class="form-control" asp-item="@(new SelectList(ViewBag.DepartmentListData,"DepartmentID","DepartmentName"))"></select>*@
               <select name="DepartmentId">
                   @foreach (var item in ViewBag.DepartmentListData)
    {
               <option value="@item.DepartmentId">@item.DepartmentName</option>
}
               </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
