@model Crudoperations.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@Model.EmployeeId"  name="EmployeeId"/>
            <div class="form-group">
                @*<label name="EmployeeName" class="control-label"></label>*@
                <h5> Employee name</h5>
                <input type="text" value="@Model.EmployeeName" class="form-control"  name="EmployeeName"/>
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="EmployeeAge" class="control-label"></label>*@
                <h5> Employee Age</h5>
                <input type="text" value="@Model.EmployeeAge" class="form-control" name="EmployeeAge"/>
                <span asp-validation-for="EmployeeAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="EmployeeSalary" class="control-label"></label>*@
                <h5> Employee Salary </h5>
                <input type="text" value="@Model.EmployeeSalary" class="form-control" name="EmployeeSalary"/>
                <span asp-validation-for="EmployeeSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Department</h5>
                @*<label asp-for="DepartmentId" class="control-label"></label>*@
                @*<input type="text" value="@Model.DepartmentId" class="form-control" name="DepartmentId" />*@
                @Html.DropDownListFor(x => Model.DepartmentId, new SelectList(ViewBag.DepartmentListData, "DepartmentId", "DepartmentName"), htmlAttributes: new { @class = "form-control"})

                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
